<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"
    android:background="@drawable/tavle2"
    android:orientation="vertical"
    tools:context=".StatistikkActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/coming_soon"
            android:text="@string/forrige_spill"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/antOpgForrigeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/antall_oppgaver_0"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/coming_soon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/thumbsup" />

            <TextView
                android:id="@+id/antRiktigeSvarForrigeTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/coming_soon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/thumbsdown" />

            <TextView
                android:id="@+id/antFeilSvarForrigeTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/coming_soon" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kritt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/coming_soon"
            android:text="@string/alle_spill"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totaltAntSpillAlleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/antall_spill_0"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/coming_soon"
            />

        <TextView
            android:id="@+id/totAntOpgAlleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/antall_oppgaver_0"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/coming_soon"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/thumbsup" />

            <TextView
                android:id="@+id/totAntRiktigeAlleTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/coming_soon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/thumbsdown" />

            <TextView
                android:id="@+id/totAntFeilSvarAlleTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/coming_soon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/nullstillButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:backgroundTint="#1AFFFFFF"
                android:fontFamily="@font/coming_soon"
                android:text="@string/nullstill"
                android:textStyle="bold" />

            <Button
                android:id="@+id/hovedmenyStatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:backgroundTint="#1AFFFFFF"
                android:fontFamily="@font/coming_soon"
                android:text="@string/hovedmeny"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>